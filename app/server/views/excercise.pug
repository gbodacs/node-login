

// preset form values if we receive an excercise object //
- excercise = typeof(udata) != 'undefined' ? udata : { }
// store the excercise ID on the client side in a hidden input field //
input(type='hidden', value= excercise._id)#ExcerId

#excercise-form-container.center-vertical.col-sm-10
	form.card.card-body.bg-light(method='post')#excercise-form
		h3
		h4#sub Itt tudsz új gyakorlatot felvenni.
		hr
		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Név
			.col-sm-8
				input.form-control#name-tf(type='text', name='name', value=excercise.name)		

		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Youtube URL
			.col-sm-8
				input.form-control#yturl-tf(type='text', name='yturl', value=excercise.yturl)

		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Mértékegység
			.col-sm-8
				input.form-control#unit-tf(type='text', name='unit', value=excercise.unit)

		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Megjegyzés
			.col-sm-8
				input.form-control#comment-tf(type='text', name='comment', value=excercise.comment)
		hr
		.form-buttons
			button(type='button')#excercise-form-btn1.btn.btn-outline-dark Hozzáadás
			button(type='submit')#excercise-form-btn2.btn.btn-primary Törlés

// display form errors in a custom modal window //

include modals/form-errors
